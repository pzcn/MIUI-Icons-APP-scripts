<?xml version="1.0" encoding="UTF-8" ?>

<group>
    <text visible="source online-scripts/misc/announce_check.sh">
        <title>公告-Beta</title>
        <desc sh="cat 'theme_files/announce.txt' "/>
    </text>
</group>

<group>
    <text>
        <title>更新</title>
    </text>
    <action icon="pic/update.png">
        <title>检查更新</title>
        <set>source $START_DIR/online-scripts/misc/update_check.sh</set>
        <desc>轻触查看资源更新情况</desc>
    </action>
    <page config-sh="source online-scripts/misc/get_changelog.sh" icon="pic/changelog.png">
        <title>更新日志</title>
        <desc>查看近期更新日志</desc>
    </page>
    <page html="https://iconsx.vercel.app/push.html"  icon="pic/push.png">
        <title>订阅新版本通知</title>
        <desc>通过微信订阅后，有新版本会推送通知</desc>
    </page>
</group>

<group>
    <text>
        <title>MIUI</title>
    </text>
    <page visible="source online-scripts/misc/installer_check.sh" id="@install" icon="pic/install.png" before-read="source online-scripts/misc/addon_init.sh" >
        <config>install.xml</config>
        <title>安装/升级</title>
        <desc>以 Magisk 模块形式进行安装图标</desc>
        <summary sh="source online-scripts/misc/get_themes.sh" />
    </page>
    <page config="mtz.xml" title="导出mtz主题包" icon="pic/download.png" desc="导出mtz主题包导出后需要主题破解或MIUI主题设计师账号才能使用" before-read="source online-scripts/misc/addon_init.sh" />
    <page config="addon.xml" title="图标自定义" icon="pic/addon.png" desc="图标存档下载，以及关于自定义图标的一些杂项" before-read="source online-scripts/misc/addon_init.sh" />
</group>

<group>
    <text>
        <title>HarmonyOS/EMUI</title>
    </text>
    <page config="hwt.xml" title="下载hwt主题包" icon="pic/download.png" desc="HarmonyOS/EMUI11系统可用" before-read="source online-scripts/misc/hwt_init.sh" />
    <page config="page/emui10.xml" title="下载hwt单层图标主题包" icon="pic/download.png" desc="EMUI10及以下系统可用" />
</group>

<group>
    <text>
        <title>其他</title>
    </text>
    <page config="page/about.xml" title="设置与帮助" desc="几个设置项、一些说明（大部分问题都有答案）、联系我们" icon="pic/about.png" />
</group>
